<div class="show" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(https://images.unsplash.com/photo-1473865857576-6551cdb55013?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1363&q=80);">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <h1>Post a new product</h1>

        <%= simple_form_for @product do |f| %>
          <%= f.input :name %>
          <%= f.input :price %>
          <%= f.input :description %>
          <%= f.input :image %>

          <%= f.button :submit, class: 'btn btn-primary' %>
        <% end %>
        <br>
        <%= link_to "Back to all products", products_path, class: "btn btn-outline-success" %>
      </div>
    </div>
  </div>
</div>
