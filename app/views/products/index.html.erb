<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(https://images.unsplash.com/photo-1534723452862-4c874018d66d?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80);">
  <div class="banner-content">
    <h1>Vibestore brings <strong>best deals</strong> to <strong>smart people</strong>!</h1>
    <p>Awesome products and best deals on campus</p>
    <%= link_to "Add a product", new_product_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>

  <div class="container">
    <div class="row">
      <% @products.each do |product| %>
        <div class="col-12 col-md-6 col-lg-3">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://images.unsplash.com/photo-1579206630023-fe8d0520ba2b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=634&q=80');">
            <div class="card-description">
              <h2><%= product.name %></h2>
            </div>
            <%= link_to "", product_path(product), class: 'card-link' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
