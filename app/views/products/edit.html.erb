<h1>Products#edit</h1>
<p>Find me in app/views/products/edit.html.erb</p>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>Post a new product</h1>

      <%= simple_form_for @product do |f| %>
        <%= f.input :name %>
        <%= f.input :price %>
        <%= f.input :description %>
        <%= f.input :image %>

        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>

